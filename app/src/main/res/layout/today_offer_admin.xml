<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp"
    android:layout_margin="@dimen/_5sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/prod_image"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:src="@drawable/cover_menu_pizza"/>
    <LinearLayout
        android:id="@+id/root_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:weightSum="1"
        android:layout_toRightOf="@+id/prod_image">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Karachi Achanak baryani"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight=".5"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="end"
            android:layout_weight=".5">
        <ToggleButton
            android:id="@+id/tb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton 1"
            android:textOff="Off"
            android:backgroundTint="@color/app_color"
            android:background="@drawable/border_radius"
            android:textColor="@color/white"
            android:textOn="On" />

        <ToggleButton
            android:id="@+id/tb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton 2"
            android:textOff="Off"
            android:textColor="@color/Black"
            android:backgroundTint="@color/back_grey"
            android:background="@drawable/border_radius"
            android:textOn="On" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/root_layout1"
        android:weightSum="1"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_toRightOf="@+id/prod_image">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Short Description"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight=".5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rs:240"
            android:textColor="@color/Green"
            android:textStyle="bold"
            android:gravity="end"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight=".5"/>
    </LinearLayout>


</RelativeLayout>